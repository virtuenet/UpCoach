# =====================================================
# UpCoach Production Environment Configuration
# SECURITY CRITICAL: Replace all placeholder values
# =====================================================

NODE_ENV=production

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =====================================================
DATABASE_URL=postgresql://upcoach_prod:SECURE_DB_PASSWORD@prod-db.upcoach.ai:1433/upcoach_production?sslmode=require
DB_USER=upcoach_prod
DB_PASSWORD=SECURE_DB_PASSWORD
DB_NAME=upcoach_production

# =====================================================
# JWT CONFIGURATION - PRODUCTION STRENGTH
# =====================================================
# CRITICAL: Generate with: openssl rand -base64 64
JWT_SECRET=SECURE_JWT_SECRET_64_CHARS_MIN_PRODUCTION_ONLY_CHANGE_THIS
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=SECURE_JWT_REFRESH_SECRET_64_CHARS_MIN_PRODUCTION_ONLY_CHANGE_THIS  
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# GOOGLE OAUTH CONFIGURATION - PRODUCTION
# =====================================================
GOOGLE_CLIENT_ID=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnopqrstuvwxyz123456789
GOOGLE_WEB_CLIENT_ID_PROD=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_MOBILE_CLIENT_ID_PROD=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_SERVER_CLIENT_ID_PROD=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com

# =====================================================
# SUPABASE CONFIGURATION - PRODUCTION
# =====================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_PRODUCTION_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_PRODUCTION_SERVICE_ROLE_KEY

# =====================================================
# AI CONFIGURATION
# =====================================================
OPENAI_API_KEY=sk-proj-YOUR_PRODUCTION_OPENAI_KEY_HERE
CLAUDE_API_KEY=sk-ant-api03-YOUR_PRODUCTION_CLAUDE_KEY_HERE

# =====================================================
# STRIPE CONFIGURATION
# =====================================================
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# Stronger bcrypt rounds for production
BCRYPT_ROUNDS=15
# Tightened rate limiting
RATE_LIMIT_MAX_REQUESTS=75
# Strict CORS configuration
CORS_ORIGINS=https://app.upcoach.ai,https://admin.upcoach.ai,https://api.upcoach.ai
# Additional security headers
SECURITY_HEADER_HSTS_MAX_AGE=31536000
SECURITY_HEADER_CSP=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.upcoach.ai; font-src 'self' https://fonts.gstatic.com
# Hardened TLS configuration
TLS_MIN_VERSION=TLSv1.3
# IP-based protection
IP_RATE_LIMIT_WINDOW_MS=900000
IP_RATE_LIMIT_MAX_REQUESTS=500

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://default:SECURE_REDIS_PASSWORD@prod-redis.upcoach.ai:1379

# =====================================================
# MONITORING
# =====================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=YOUR_DATADOG_API_KEY