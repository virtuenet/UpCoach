# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
APP_NAME=UpCoach
APP_VERSION=1.0.0
PRODUCTION_FRONTEND_URL=https://upcoach.ai
PRODUCTION_API_URL=https://api.upcoach.ai
PRODUCTION_ADMIN_URL=https://admin.upcoach.ai
PRODUCTION_MONITORING_URL=https://monitoring.upcoach.ai

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=upcoach_prod
DB_USER=upcoach_prod_user
DB_PASSWORD=your_secure_database_password_here
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# Authentication
JWT_SECRET=your_very_long_random_jwt_secret_here_at_least_64_characters
JWT_REFRESH_SECRET=another_very_long_random_jwt_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id
STRIPE_PRICE_ID_PREMIUM=price_your_premium_plan_price_id

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_openai_org_id_here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Email (SendGrid/AWS SES)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=noreply@upcoach.ai
EMAIL_FROM_NAME=UpCoach

# SMTP (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# AWS (for backups and CDN)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=upcoach-backups-prod
CDN_S3_BUCKET=upcoach-cdn-prod
CDN_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Monitoring & Analytics
SENTRY_DSN_BACKEND=https://your_sentry_dsn_for_backend@sentry.io/project_id
SENTRY_DSN_ADMIN=https://your_sentry_dsn_for_admin@sentry.io/project_id
SENTRY_DSN_LANDING=https://your_sentry_dsn_for_landing@sentry.io/project_id
SENTRY_DSN_MOBILE=https://your_sentry_dsn_for_mobile@sentry.io/project_id

# Google Analytics
GA_MEASUREMENT_ID=G-YOUR_MEASUREMENT_ID
GTM_ID=GTM-YOUR_GTM_ID

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Backup
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_at_least_32_characters

# Security
CORS_ORIGIN=https://upcoach.ai,https://www.upcoach.ai,https://admin.upcoach.ai
SESSION_SECRET=your_session_secret_at_least_32_characters
COOKIE_SECRET=your_cookie_secret_at_least_32_characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTH=5

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/upcoach.ai.crt
SSL_KEY_PATH=/etc/nginx/ssl/upcoach.ai.key
SSL_CA_PATH=/etc/nginx/ssl/ca-bundle.crt

# Feature Flags
FEATURE_AI_COACH=true
FEATURE_VOICE_COACH=true
FEATURE_CMS=true
FEATURE_COMMUNITY=false
FEATURE_REFERRALS=true

# Third-party APIs
MIXPANEL_TOKEN=your_mixpanel_token_here
HOTJAR_ID=your_hotjar_id_here
INTERCOM_APP_ID=your_intercom_app_id_here
FULLSTORY_ORG_ID=your_fullstory_org_id_here

# Social Media
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# Webhook URLs
WEBHOOK_SLACK_ALERTS=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_DISCORD_ALERTS=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK