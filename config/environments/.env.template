# UpCoach Environment Template
# Copy this file and rename to .env.[environment] (e.g., .env.development, .env.staging, .env.production)
# Replace all placeholder values with actual values for your environment

# ===========================
# ENVIRONMENT CONFIGURATION
# ===========================
NODE_ENV=development
ENVIRONMENT=development

# ===========================
# DATABASE CONFIGURATION
# ===========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=upcoach
DB_PASSWORD=your_db_password_here
DB_NAME=upcoach_dev
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===========================
# REDIS CONFIGURATION
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===========================
# JWT & AUTHENTICATION
# ===========================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_minimum_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================
# EXTERNAL SERVICES
# ===========================
# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===========================
# APPLICATION URLS
# ===========================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
API_URL=http://localhost:8080

# Frontend Environment Variables
VITE_API_URL=${API_URL}
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
VITE_ENVIRONMENT=${ENVIRONMENT}

# Next.js Environment Variables
NEXT_PUBLIC_API_URL=${API_URL}
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# ===========================
# EMAIL CONFIGURATION
# ===========================
EMAIL_FROM=noreply@upcoach.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===========================
# MONITORING & ERROR TRACKING
# ===========================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
SENTRY_ENVIRONMENT=${ENVIRONMENT}
GA_MEASUREMENT_ID=your_ga_measurement_id
NEXT_PUBLIC_GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}

# ===========================
# FILE STORAGE
# ===========================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=upcoach-${ENVIRONMENT}-uploads

# ===========================
# SECURITY
# ===========================
CORS_ORIGIN=${FRONTEND_URL},${ADMIN_URL}
CSRF_SECRET=your_csrf_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# ===========================
# DATABASE SYNC
# ===========================
# Database sync mode: 'none' (default, use migrations), 'alter' (development), 'force' (test only)
DB_SYNC_MODE=none

# ===========================
# LOCAL LLM CONFIGURATION
# ===========================
# Path to the GGUF model file
LOCAL_LLM_MODEL_PATH=/models/upcoach-ai.gguf
# Directory containing available models
LOCAL_LLM_MODELS_DIR=/models

# ===========================
# PERFORMANCE & CACHING
# ===========================
LOG_LEVEL=info
CACHE_TTL=300
ENABLE_REDIS_CACHE=true
MAX_REQUEST_SIZE=50mb
MAX_FILE_SIZE=10mb

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# ===========================
# FEATURE FLAGS
# ===========================
ENABLE_FEATURE_FLAGS=true
ENABLE_AI_COACHING=true
ENABLE_VOICE_JOURNAL=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_QUERY_LOGGING=false