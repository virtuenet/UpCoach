# UpCoach Staging Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Database Configuration (Staging)
DB_HOST=postgres
DB_PORT=5432
DB_USER=upcoach
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=upcoach_staging
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration (Staging)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# JWT & Authentication (Staging)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}
REFRESH_TOKEN_EXPIRES_IN=7d

# Application URLs (Staging)
FRONTEND_URL=https://staging.upcoach.ai
ADMIN_URL=https://staging-admin.upcoach.ai
API_URL=https://staging-api.upcoach.ai

# Frontend Environment Variables
VITE_API_URL=https://staging-api.upcoach.ai
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
VITE_ENVIRONMENT=staging

# Next.js Environment Variables
NEXT_PUBLIC_API_URL=https://staging-api.upcoach.ai
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# External Services (Staging - use test keys)
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
CLAUDE_API_KEY=${CLAUDE_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# Email Configuration (Staging)
EMAIL_FROM=noreply-staging@upcoach.ai
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Monitoring & Error Tracking (Staging)
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging
GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}
NEXT_PUBLIC_GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID}

# File Storage (Staging)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
AWS_S3_BUCKET=upcoach-staging-uploads

# Security (Staging)
CORS_ORIGIN=https://staging.upcoach.ai,https://staging-admin.upcoach.ai
CSRF_SECRET=${CSRF_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# Performance & Monitoring (Staging - more verbose)
LOG_LEVEL=debug
LOG_FORMAT=json
CACHE_TTL=300
ENABLE_REDIS_CACHE=true
ENABLE_DEBUG_LOGGING=true
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting (Relaxed for staging)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# Feature Flags (All enabled for staging testing)
ENABLE_FEATURE_FLAGS=true
ENABLE_AI_COACHING=true
ENABLE_VOICE_JOURNAL=true
ENABLE_ANALYTICS=true
ENABLE_TEST_ROUTES=true

# Testing (Staging specific)
TEST_DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/upcoach_test
MAX_REQUEST_SIZE=50mb
MAX_FILE_SIZE=10mb