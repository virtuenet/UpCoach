# UpCoach Production Environment
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration (Production - use environment variables)
DATABASE_URL=${DATABASE_URL}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=upcoach_db

# Redis Configuration (Production)
REDIS_URL=${REDIS_URL}

# JWT Configuration (Production - use environment variables)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES_IN=7d

# Application URLs (Production)
FRONTEND_URL=https://upcoach.ai
ADMIN_URL=https://admin.upcoach.ai
API_URL=https://api.upcoach.ai
SITE_URL=https://upcoach.ai

# Frontend Environment Variables
VITE_API_URL=https://api.upcoach.ai
VITE_ENVIRONMENT=production

# Next.js Environment Variables
NEXT_PUBLIC_API_URL=https://api.upcoach.ai
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY}

# Security (Production hardened)
CORS_ORIGINS=https://upcoach.ai,https://api.upcoach.ai,https://admin.upcoach.ai
ENABLE_BASIC_AUTH=true
ENABLE_HEALTH_CHECKS=true

# External Services (Production - use environment variables)
OPENAI_API_KEY=${OPENAI_API_KEY}
CLAUDE_API_KEY=${CLAUDE_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}

# Feature Flags (Production - minimal features enabled)
ENABLE_CLAUDE=false
ENABLE_VOICE_AI=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_ADAPTIVE_LEARNING=false

# Monitoring (Optional in production)
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Performance (Production optimized)
LOG_LEVEL=error
ENABLE_DEBUG_LOGGING=false
ENABLE_QUERY_LOGGING=false
CACHE_TTL=3600
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100