# Production Environment Configuration Template
# ============================================
#
# SECURITY NOTICE:
# - Replace all placeholder values with secure, randomly generated values
# - Never commit this file with real values to version control
# - Use AWS Secrets Manager, HashiCorp Vault, or similar for production secrets
# - Rotate all secrets regularly (monthly recommended)

# Database Configuration
# =====================
DB_NAME=upcoach_prod
DB_USER=upcoach_prod_user
# CRITICAL: Generate strong 32+ character password
DB_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_PASSWORD_DB

# Redis Configuration
# ==================
# CRITICAL: Generate strong 32+ character password
REDIS_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_PASSWORD_REDIS

# Application Security
# ===================
# CRITICAL: Generate cryptographically secure JWT secrets (64+ chars)
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_JWT_SECRET
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_64_CHAR_JWT_REFRESH_SECRET
SESSION_SECRET=REPLACE_WITH_SECURE_64_CHAR_SESSION_SECRET

# Encryption Keys
# ==============
# CRITICAL: Generate AES-256 compatible encryption key (64 hex chars)
ENCRYPTION_KEY=REPLACE_WITH_SECURE_64_HEX_ENCRYPTION_KEY
MASTER_KEY=REPLACE_WITH_SECURE_64_HEX_MASTER_KEY
IP_SALT=REPLACE_WITH_SECURE_32_CHAR_IP_SALT

# SSL/TLS Configuration
# ====================
LETSENCRYPT_EMAIL=security@upcoach.ai
SSL_CERT_PATH=/etc/ssl/certs/upcoach.crt
SSL_KEY_PATH=/etc/ssl/private/upcoach.key

# Monitoring & Observability
# ========================
# CRITICAL: Generate strong Grafana credentials
GRAFANA_USER=admin_secure
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=REPLACE_WITH_SECURE_32_CHAR_GRAFANA_SECRET

# Security Email Notifications
SECURITY_EMAIL=security-alerts@upcoach.ai

# API Keys (Store in AWS Secrets Manager in production)
# ===================================================
OPENAI_API_KEY=sk-REPLACE_WITH_OPENAI_API_KEY
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_STRIPE_WEBHOOK_SECRET

# Third-party Services
# ===================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=REPLACE_WITH_SUPABASE_ANON_KEY
SUPABASE_SERVICE_KEY=REPLACE_WITH_SUPABASE_SERVICE_KEY

# Monitoring & Error Tracking
# ===========================
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
DD_API_KEY=REPLACE_WITH_DATADOG_API_KEY
DD_APP_KEY=REPLACE_WITH_DATADOG_APP_KEY

# AWS Configuration
# ================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_ACCESS_KEY
EKS_CLUSTER_NAME=upcoach-production
AWS_ROLE_ARN=arn:aws:iam::ACCOUNT:role/GitHubActions-ProductionDeploy

# Backup Configuration
# ===================
BACKUP_S3_BUCKET=upcoach-backups-prod
AWS_DEFAULT_REGION=us-east-1

# CORS & Domain Configuration
# ===========================
CORS_ORIGINS=https://upcoach.ai,https://admin.upcoach.ai,https://api.upcoach.ai
API_URL=https://api.upcoach.ai
FRONTEND_URL=https://upcoach.ai
ADMIN_URL=https://admin.upcoach.ai
CMS_URL=https://cms.upcoach.ai

# Rate Limiting & Security
# ========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Audit & Compliance
# ==================
AUDIT_LOGGING_ENABLED=true
SECURITY_MONITORING_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=1095

# Application Versioning
# ======================
APP_VERSION=v1.0.0
NODE_ENV=production

# Security Headers Configuration
# ==============================
CSP_REPORT_ONLY=false
SECURITY_HEADERS_ENABLED=true

# Slack Notifications
# ===================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SECURITY_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SECURITY/WEBHOOK

# Production Optimization
# =======================
PORT=3000
MAX_WORKERS=4
CLUSTER_MODE=true

# Health Check Configuration
# ==========================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# File Upload Security
# ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_SCAN_ENABLED=true

# Password Policy
# ===============
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90

# Session Configuration
# ====================
SESSION_TIMEOUT_MINUTES=60
SESSION_ABSOLUTE_TIMEOUT_HOURS=8
CONCURRENT_SESSION_LIMIT=3

# Email Configuration
# ===================
EMAIL_FROM=noreply@upcoach.ai
SMTP_HOST=smtp.upcoach.ai
SMTP_PORT=587
SMTP_USER=noreply@upcoach.ai
SMTP_PASS=REPLACE_WITH_SMTP_PASSWORD
EMAIL_ENCRYPTION=tls

