{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node", "vitest"],
    "baseUrl": "../../",
    "paths": {
      "@upcoach/types": ["packages/types/src"]
    }
  },
  "include": ["src/**/*", "../types/src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" }
  ]
}