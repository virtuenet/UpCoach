# UpCoach Production Environment - Port Range 1000-1999
NODE_ENV=production

# Database Configuration (Docker container on port 1433)
DATABASE_URL=${DATABASE_URL}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=upcoach_db

# Redis Configuration (Docker container on port 1003)
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration (Backend on port 1080)
API_URL=http://backend-api:8080
PORT=1080

# Frontend URLs
ADMIN_PANEL_URL=http://admin-panel:3001
LANDING_PAGE_URL=http://landing-page:3000
CMS_PANEL_URL=http://cms-panel:3002

# Site Configuration - SECURED
SITE_URL=https://upcoach.ai
CORS_ORIGINS=https://upcoach.ai,https://api.upcoach.ai,https://admin.upcoach.ai,https://cms.upcoach.ai

# Minimal required for basic functionality
ENABLE_BASIC_AUTH=true
ENABLE_HEALTH_CHECKS=true

# Production API Keys - MUST BE SET VIA ENVIRONMENT VARIABLES
OPENAI_API_KEY=${OPENAI_API_KEY}
CLAUDE_API_KEY=${CLAUDE_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY}
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}

# Disable optional features for minimal deployment
ENABLE_CLAUDE=false
ENABLE_VOICE_AI=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_ADAPTIVE_LEARNING=false
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
