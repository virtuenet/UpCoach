# UpCoach Production Environment Configuration

# Application Settings
NODE_ENV=production
APP_NAME=UpCoach
APP_DOMAIN=https://upcoach.ai
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://upcoach_prod:${POSTGRES_PASSWORD}@postgres.upcoach.ai:5432/upcoach_production
DATABASE_SSL=true
DATABASE_POOL_MAX=50
DATABASE_POOL_MIN=10
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=redis.upcoach.ai
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true
REDIS_CONNECTION_TIMEOUT=10000

# Authentication
JWT_SECRET=${JWT_PRODUCTION_SECRET}
JWT_EXPIRATION=7d
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}

# Two-Factor Authentication
TOTP_ISSUER=UpCoach
TWO_FACTOR_ENABLED=true

# Payment Integration
STRIPE_SECRET_KEY=${STRIPE_PRODUCTION_SECRET}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_PRODUCT_ID=prod_enterprise

# AI Services
OPENAI_API_KEY=${OPENAI_PRODUCTION_KEY}
AI_MODEL=gpt-4-turbo
AI_TEMPERATURE=0.7

# Monitoring & Logging
SENTRY_DSN=${SENTRY_PRODUCTION_DSN}
LOG_LEVEL=error
MONITORING_ENABLED=true

# Performance & Caching
CACHE_TTL=3600
REQUEST_TIMEOUT=5000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Security
CORS_ORIGIN=https://upcoach.ai
ALLOWED_ORIGINS=https://admin.upcoach.ai,https://coaching.upcoach.ai
CSRF_PROTECTION=true
HSTS_MAX_AGE=31536000
CSP_REPORT_ENDPOINT=https://upcoach.ai/security/csp-report

# Email & Notifications
SMTP_HOST=smtp.upcoach.ai
SMTP_PORT=587
SMTP_USER=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
DEFAULT_EMAIL_FROM=noreply@upcoach.ai

# Feature Flags
ADVANCED_ANALYTICS_ENABLED=true
AI_COACHING_ENABLED=true
ENTERPRISE_SSO_ENABLED=true

# Compliance
GDPR_ENABLED=true
HIPAA_ENABLED=true
DATA_RETENTION_DAYS=365

# Deployment Metadata
COMMIT_HASH=${CI_COMMIT_SHA}
DEPLOYMENT_TIMESTAMP=${DEPLOYMENT_TIMESTAMP}