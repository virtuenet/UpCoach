{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "verify:build": {
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    },
    "test:unit": {
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "outputs": ["test-results/**"]
    }
  }
}
