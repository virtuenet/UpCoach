# UpCoach API - Production Environment Configuration
# Copy this file to .env.production and fill in your values
# NEVER commit production secrets to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use a secure connection string from your cloud provider (Railway, AWS RDS, etc.)
DATABASE_URL=postgresql://user:password@host:5432/upcoach_production?sslmode=require

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:password@host:6379

# =============================================================================
# AUTHENTICATION - CRITICAL: Use strong, unique secrets
# =============================================================================
# Generate with: openssl rand -hex 64
JWT_SECRET=YOUR_64_CHARACTER_JWT_SECRET_HERE_GENERATE_WITH_OPENSSL_RAND_HEX_64
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=YOUR_64_CHARACTER_REFRESH_SECRET_HERE_GENERATE_WITH_OPENSSL_RAND_HEX_64
JWT_REFRESH_EXPIRES_IN=7d

# Session secret for cookie encryption
SESSION_SECRET=YOUR_64_CHARACTER_SESSION_SECRET_HERE_GENERATE_WITH_OPENSSL_RAND_HEX_64

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=14
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://app.upcoach.com,https://admin.upcoach.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-prod-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# CLAUDE CONFIGURATION
# =============================================================================
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# =============================================================================
# LOCAL LLM (for on-device inference fallback)
# =============================================================================
LOCAL_LLM_ENABLED=false
LOCAL_LLM_MODEL_PATH=/app/models/phi-3.5-mini-instruct.gguf
LOCAL_LLM_MAX_TOKENS=512
LOCAL_LLM_CONTEXT_WINDOW=4096
LOCAL_LLM_TIMEOUT_MS=20000
LOCAL_LLM_BACKEND=llama.cpp

# =============================================================================
# SUPABASE CONFIGURATION (if using Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# REVENUECAT CONFIGURATION
# =============================================================================
REVENUECAT_API_KEY=your-revenuecat-api-key
REVENUECAT_WEBHOOK_AUTH_KEY=your-webhook-auth-key
REVENUECAT_PROJECT_ID=your-project-id

# =============================================================================
# EMAIL CONFIGURATION (SendGrid, AWS SES, etc.)
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@upcoach.com

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
SMS_PROVIDER=twilio

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# PUSH NOTIFICATIONS (Firebase Cloud Messaging)
# =============================================================================
FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/1234567
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=upcoach@1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Datadog (if using)
DATADOG_ENABLED=false
DATADOG_AGENT_HOST=localhost
DATADOG_SERVICE=upcoach-api
DATADOG_VERSION=1.0.0

# =============================================================================
# CDN CONFIGURATION
# =============================================================================
CDN_ENABLED=true
CDN_URL=https://cdn.upcoach.com

# =============================================================================
# LARK INTEGRATION (if using)
# =============================================================================
LARK_APP_ID=
LARK_APP_SECRET=
LARK_ENCRYPT_KEY=
LARK_VERIFICATION_TOKEN=
LARK_DEFAULT_CHAT_ID=

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
