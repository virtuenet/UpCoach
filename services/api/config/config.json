{
  "development": {
    "username": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "database": "${DB_NAME}",
    "host": "${DB_HOST}",
    "port": "${DB_PORT}",
    "dialect": "postgres",
    "logging": true,
    "pool": {
      "max": 5,
      "min": 1,
      "acquire": 30000,
      "idle": 10000
    }
  },
  "test": {
    "username": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "database": "${DB_NAME}_test",
    "host": "${DB_HOST}",
    "port": "${DB_PORT}",
    "dialect": "postgres",
    "logging": false,
    "pool": {
      "max": 3,
      "min": 1,
      "acquire": 30000,
      "idle": 10000
    }
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": false,
    "ssl": true,
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": true
      }
    },
    "pool": {
      "max": 20,
      "min": 5,
      "acquire": 60000,
      "idle": 10000
    },
    "retry": {
      "match": [
        "ETIMEDOUT",
        "EHOSTUNREACH",
        "ECONNRESET",
        "ECONNREFUSED",
        "ETIMEDOUT",
        "ESOCKETTIMEDOUT",
        "EHOSTUNREACH",
        "EPIPE",
        "EAI_AGAIN",
        "SequelizeConnectionError",
        "SequelizeConnectionRefusedError",
        "SequelizeHostNotFoundError",
        "SequelizeHostNotReachableError",
        "SequelizeInvalidConnectionError",
        "SequelizeConnectionTimedOutError"
      ],
      "max": 3
    }
  }
}