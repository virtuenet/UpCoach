<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_progress_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/widget_background_circular">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Progress percentage -->
        <TextView
            android:id="@+id/widget_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4361EE" />

        <!-- Completed count -->
        <TextView
            android:id="@+id/widget_progress_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="12sp"
            android:textColor="#B3B3B3" />

        <!-- Streak display -->
        <TextView
            android:id="@+id/widget_progress_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 0"
            android:textSize="14sp"
            android:textColor="#FF6B35"
            android:layout_marginTop="4dp" />

        <!-- Status message -->
        <TextView
            android:id="@+id/widget_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</FrameLayout>
